PORT=5000

# Supabase Database Connection
# Get your connection string from: https://app.supabase.com -> Your Project -> Settings -> Database -> Connection string
# Use the "Connection pooling" or "Direct connection" URI
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Hack Club Auth OAuth Configuration
# Get these from: https://auth.hackclub.com/developer/apps
# Create an app and set redirect URI to: http://localhost:3000/auth/callback (or your production URL)
HACKCLUB_CLIENT_ID=your_client_id_here
HACKCLUB_CLIENT_SECRET=your_client_secret_here
HACKCLUB_REDIRECT_URI=http://localhost:3000/auth/callback

# Frontend URL (for redirects after OAuth)
FRONTEND_URL=http://localhost:3000

# A random secret key for JWT tokens (you can generate one with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-change-this-to-something-random

NODE_ENV=development
